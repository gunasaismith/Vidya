<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9C4"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DetailedInformationActivity">

    <TextView
        android:id="@+id/schoolNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/phoneNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/locationLinkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/topicTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/documentIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Document ID: "
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Volunteer Name -->
    <EditText
        android:id="@+id/volunteerNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Volunteer Name"
        android:inputType="text"
        android:minHeight="48dp" />

    <!-- Volunteer Number -->
    <EditText
        android:id="@+id/volunteerNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Volunteer Number"
        android:inputType="phone"
        android:minHeight="48dp" />

    <!-- Volunteer Qualification -->
    <EditText
        android:id="@+id/volunteerQualificationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Volunteer Qualification"
        android:inputType="text"
        android:minHeight="48dp" />

    <!-- Apply Button -->
    <Button
        android:id="@+id/applyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply" />
</LinearLayout>

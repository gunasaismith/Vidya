<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff9c4"
    android:padding="16dp"
    tools:context=".VolunteerMain">

    <TextView
        android:id="@+id/volunteer_user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Hello, Volunteer!"
        android:textColor="@android:color/black"
        android:textSize="90px"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/applyTile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/volunteer_user_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_blue_light"
        android:clickable="true"
        android:onClick="appplyTileClick"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Apply Icon"
            android:src="@drawable/volunteer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="For a Better Nation"
            android:textColor="@android:color/white"
            android:textSize="60px" />
    </LinearLayout>

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="40dp"
        android:text="@string/logout" />
</RelativeLayout>
